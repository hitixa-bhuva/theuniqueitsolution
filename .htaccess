RewriteRule ^web-development$ web-development.php [L,NC]
RewriteRule ^mobile-application-development$ mobile-application-development.php [L,NC]
RewriteRule ^ui-ux-design$ ui-ux-design.php [L,NC]
RewriteRule ^hire-dedicated-developers$ hire-dedicated-developers.php [L,NC]
RewriteRule ^it-consulting$ it-consulting.php [L,NC]

# Industries URLs
RewriteRule ^hospitality-industry$ hospitality-industry.php [L,NC]
